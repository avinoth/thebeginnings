---
title: The Beginnings
---

<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="jumbotron">
        <h1>
          <%= image_tag "#{site}-logo.png", class: 'image header-img'  %>
          <%= site.capitalize %>
        </h1>
      </div>
    </div>
  </div>
</div>

<% content = data.content[site] %>

<div class="container">
  <div class="row">
    <% content.each do |site_data| %>
      <div class="col-md-8 col-md-offset-2">
        <h3 style="color: white;"><%= Date.parse(site_data.date_published).strftime('%b %d, %Y') rescue site_data.date_published %></h3>
        <hr />
        <a href=<%= site_data.url %>>
          <div class="panel panel-default url-bar">
            <div class="panel-body text-left">
              <p class="lead"> <%= site_data.title %></p>
              <p><%= site_data.description %></p>
              <p>
                <%= site_data.url %>
                <span class="glyphicon glyphicon-new-window"></span>
              </p>
            </div>
            <div class="panel-footer text-right">
              published on
              <b><%= site_data.published_by %></b>
            </div>
          </div>
        </a>
      </div>
    <% end %>
  </div>
</div>


